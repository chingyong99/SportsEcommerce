<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerCategoryActivity">

    <TextView
        android:id="@+id/title_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Add New Product"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/men_shirt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/men_shirt_icon1" />

        <ImageView
            android:id="@+id/women_shirt"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/women_shirt_icon"/>

        <ImageView
            android:id="@+id/men_shoes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/men_shoes_icon"/>

        <ImageView
            android:id="@+id/women_shoes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/women_shoes_icon"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/accessories"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sports_accessories" />

        <ImageView
            android:id="@+id/football"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/football_icon"/>

        <ImageView
            android:id="@+id/badminton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/badminton_icon"/>


    </LinearLayout>

    <Button
        android:id="@+id/manage_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_orders_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:text="Manage Products"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/view_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seller_logout_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:text="View Customer Orders"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/seller_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button"
        android:text="Seller Logout"
        android:textSize="17sp"/>

</RelativeLayout>