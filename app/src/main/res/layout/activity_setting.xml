<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_setting"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profile_setting"/>

    <EditText
        android:id="@+id/phone_number_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_setting_button"
        android:hint="Phone Number"
        android:layout_margin="15dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/username_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_setting"
        android:hint="Username"
        android:layout_margin="15dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/address_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_setting"
        android:hint="Address"
        android:layout_margin="15dp"
        android:padding="10dp"/>

        <TextView
            android:id="@+id/update_setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true" />


</RelativeLayout>