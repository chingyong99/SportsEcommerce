<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerViewOrderActivity">

    <RelativeLayout
        android:id="@+id/seller_order_list_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/customer_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Customer Orders"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seller_order_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seller_order_list_relative">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>