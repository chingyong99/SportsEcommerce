<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportsecommerce">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SellerRegistrationActivity"
            android:parentActivityName=".LoginActivity"></activity>
        <activity android:name=".PaymentDetailsActivity" />
        <activity
            android:name=".PaymentProcessActivity"
            android:parentActivityName=".ConfirmFinalOrderActivity" />
        <activity
            android:name=".VoiceAndVideoActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SellerManageProductsActivity"
            android:parentActivityName=".SellerCategoryActivity" />
        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SellerViewOrderActivity"
            android:parentActivityName=".SellerCategoryActivity" />
        <activity
            android:name=".ConfirmFinalOrderActivity"
            android:parentActivityName=".CartActivity" />
        <activity
            android:name=".CartActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ProductDetailsActivity"
            android:parentActivityName=".UserProfileActivity" />
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".UserProfileActivity" />
        <activity
            android:name=".UserProfileActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SellerCategoryActivity" />
        <activity
            android:name=".AddNewProductActivity"
            android:parentActivityName=".SellerCategoryActivity" />
        <activity android:name=".RegisterActivity" android:parentActivityName=".LoginActivity"/>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>